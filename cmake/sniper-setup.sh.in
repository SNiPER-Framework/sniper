#!/bin/bash

export LD_LIBRARY_PATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@:$LD_LIBRARY_PATH
export PATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@:$PATH
export CMAKE_PREFIX_PATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@:$CMAKE_PREFIX_PATH
export SNIPER_INIT_FILE=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATADIR@/sniper/.init.json

if [ "x@CMAKE_INSTALL_PYTHONDIR@" != "x" ]; then
    if [ -d "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_PYTHONDIR@" ]; then
        export PYTHONPATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_PYTHONDIR@:$PYTHONPATH
    fi
fi

if [[ "$OSTYPE" =~ ^darwin ]]; then
	install_name_tool -add_rpath @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_PYTHONDIR@/Sniper/libSniperPython.so
	install_name_tool -add_rpath @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@/libSniperCoreUsages.so
	install_name_tool -add_rpath @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ @CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@/libSniperKernel.so
fi
